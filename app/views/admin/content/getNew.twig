{% extends "admin/_layout" %}

{% block content %}
	<form action="{{ URL_route('admin_post_content', content.id) }}" method="post">
	<input type="hidden" name="contentType[id]" value="{{ contentType.id }}" />
	{% for region in contentType.regions %}
		<fieldset>
			<legend><span>{{ region.name }}</span></legend>
			{% for block in content.blocksIn(region) %}
				<fieldset>
					<legend>{{ block.id }} - {{ block.block.name }}</legend>
					{% for field in block.block.fields %}
						<div>
							{{ field.renderInputField() }}
						</div>
					{% endfor %}
				</fieldset>
			{% endfor %}
			<button name="addBlock" value="{{ region.id }}">Add Block</a>
		</fieldset>
	{% endfor %}
	</form>
{% endblock %}